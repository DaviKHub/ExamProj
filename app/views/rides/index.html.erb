<h1 class="mb-4">🛣️ Список поездок</h1>

<div class="row">
  <% @rides.each do |ride| %>
    <div class="col-md-6">
      <div class="card p-3 mb-4">
        <div class="card-body">
          <h5 class="card-title">🛺 Поездка №<%= ride.id %></h5>
          <p class="card-text">
            🏁 <strong>Откуда:</strong> <%= ride.pickup_location %> <br>
            🏁 <strong>Куда:</strong> <%= ride.dropoff_location %> <br>
            👤 <strong>Клиент:</strong> <%= ride.client.phone %> <br>
            🚗 <strong>Машина:</strong> <%= ride.car.plate_number %> <br>
            💰 <strong>Стоимость:</strong> <%= ride.fare %> ₽ <br>
            🔘 <strong>Статус:</strong> <%= ride.status.capitalize %>
          </p>
          <div class="d-flex justify-content-between">
            <%= link_to "Редактировать", edit_ride_path(ride), class: "btn btn-warning btn-sm" %>
            <%= link_to "Удалить", ride, method: :delete, data: { confirm: "Вы уверены?" }, class: "btn btn-danger btn-sm" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-4">
  <%= link_to "➕ Добавить поездку", new_ride_path, class: "btn btn-success" %>
</div>