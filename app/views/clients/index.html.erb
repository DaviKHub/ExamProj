<h1 class="mb-4">👥 Список клиентов</h1>

<div class="row">
  <% @clients.each do |client| %>
    <div class="col-md-6">
      <div class="card p-3 mb-4">
        <div class="card-body">
          <h5 class="card-title">👤 <%= client.name %></h5>
          <p class="card-text">
            📞 <strong>Телефон:</strong> <%= client.phone %>
          </p>
          <div class="d-flex justify-content-between">
            <%= link_to "Редактировать", edit_client_path(client), class: "btn btn-warning btn-sm" %>
            <%= button_to "Удалить", client, method: :delete, data: { confirm: "Вы уверены?" }, class: "btn btn-danger btn-sm" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-4">
  <%= link_to "➕ Добавить клиента", new_client_path, class: "btn btn-success" %>
</div>