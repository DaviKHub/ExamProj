<%= form_with(model: car, local: true, class: "car-form") do |f| %>
  <% if car.errors.any? %>
    <div class="alert alert-danger">
      <h4>Ошибки при сохранении:</h4>
      <ul>
        <% car.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :brand, "Марка", class: "form-label" %>
    <%= f.text_field :brand, class: "form-control", placeholder: "Введите марку" %>
  </div>

  <div class="mb-3">
    <%= f.label :model, "Модель", class: "form-label" %>
    <%= f.text_field :model, class: "form-control", placeholder: "Введите модель" %>
  </div>

  <div class="mb-3">
    <%= f.label :plate_number, "Гос. номер", class: "form-label" %>
    <%= f.text_field :plate_number, class: "form-control", placeholder: "Введите гос. номер" %>
  </div>

  <div class="mb-3">
    <%= f.label :year, "Год выпуска", class: "form-label" %>
    <%= f.text_field :year, class: "form-control", placeholder: "Введите год" %>
  </div>

  <div class="mt-4">
    <%= f.submit "Сохранить", class: "btn btn-success" %>
    <%= link_to "Отмена", cars_path, class: "btn btn-secondary" %>
  </div>
<% end %>