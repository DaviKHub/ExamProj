<%= form_with(model: car, local: true) do |f| %>
  <div class="mb-3">
    <%= f.label :brand, class: "form-label" %>
    <%= f.text_field :brand, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :model, class: "form-label" %>
    <%= f.text_field :model, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :plate_number, class: "form-label" %>
    <%= f.text_field :plate_number, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :year, class: "form-label" %>
    <%= f.text_field :year, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :status, class: "form-label" %>
    <%= f.check_box :status, class: "form-check-input" %>
  </div>

  <%= f.submit "Сохранить", class: "btn btn-primary" %>
<% end %>